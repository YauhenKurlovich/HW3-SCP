<mvc:View controllerName="teams.controller.User" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc">
  <Shell>
    <App>
      <pages>
        <Page>
          <Panel id="PeopleDetailPanel" headerText="User Table" class="sapUiResponsiveMargin" width="auto">
            <content>
              <Table id="details" items="{path: 'users>/Users'}">
                <columns>
                  <Column id="userIdColumn">
                    <Text text="{i18n>userIdText}"/>
                  </Column>
                  <Column id="userNameColumn">
                    <Text text="{i18n>userNameText}"/>
                  </Column>
                </columns>
                <items>
                  <ColumnListItem>
                    <cells>
                      <Label text="{users>usid}"/>
                    </cells>
                    <cells>
                      <Label text="{users>name}"/>
                    </cells>
                  </ColumnListItem>
                </items>
              </Table>
            </content>
          </Panel>
        </Page>
      </pages>
    </App>
  </Shell>
</mvc:View>
